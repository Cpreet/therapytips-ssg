{
  "name": "therapytips-ssg",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun run index.ts",
    "build:local": "bun --env-file=.env run index.ts",
    "build:dev": "bun --env-file=.env.development run index.ts",
    "build:stage": "bun --env-file=.env.staging run index.ts",
    "build:prod": "bun --env-file=.env.production run index.ts",
    "upload": "bun --env-file=.env.production run upload.ts",
    "upload:dev": "bun --env-file=.env.development run upload.ts dev",
    "upload:stage": "bun --env-file=.env.staging run upload.ts stage",
    "upload:prod": "bun --env-file=.env.production run upload.ts prod",
    "preview": "bunx serve ./builds/dev/",
    "tailwindgen": "bunx @tailwindcss/cli -i ./tailwind.css -o ./assets/css/style.css --watch"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/ejs": "^3.1.5"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@google-analytics/data": "^5.2.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/dompurify": "^3.2.0",
    "@types/jsdom": "^21.1.7",
    "basic-ftp": "^5.0.5",
    "daisyui": "^5.0.46",
    "dompurify": "^3.2.6",
    "ejs": "^3.1.10",
    "jsdom": "^26.1.0",
    "marked": "^16.0.0",
    "tailwindcss": "^4.1.11"
  }
}
