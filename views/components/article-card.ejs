<a href="<%= process.env.BASE_URL %><%= process.env.BASE_DIR %><%= article.article_type.trim() %>/<%= article.slug.trim() %>" 
   class="flex flex-col size-full group p-3 border rounded-xl border-(--therapy-tips-text)/70
          hover:border-(--therapy-tips) hover:cursor-pointer transition-all duration-100 no-ads">
  <div class="relative">
    <img src="<%= article.hero_image_url?.trim() %>" 
         alt="<%= article.title?.trim() %>" 
         height="250"
         class="object-cover group-hover:cursor-pointer rounded-lg" />
  </div>
  
  <div class="flex flex-col gap-2 my-2">
    <div class="relative flex items-center justify-end gap-1 bg-white rounded-md">
      <span class="absolute -left-3 top-0 text-xs md:text-2xs lg:text-xs border border-(--therapy-tips-text)/70 border-l-0 bg-white text-(--therapy-tips-text) px-8 md:px-4 lg:px-8 py-1 rounded-r-md">
        <%= article.article_type.trim().toUpperCase().slice(0, -1) %>
      </span>
      
      <span class="flex items-center gap-1">
        <img src="https://unpkg.com/lucide-static@latest/icons/calendar.svg"
             class="size-2.5 sm:size-2 lg:size-3 mb-0.5 text-(--therapy-tips-text)" />
        <p class="text-xs sm:text-2xs lg:text-xs text-(--therapy-tips-text)">
          <%= new Date(article.publication_date?.trim() ?? "").toLocaleDateString("en-US", { 
            year: "numeric", 
            month: "short", 
            day: "numeric" 
          }).toUpperCase() %>
        </p>
      </span>
      
      <span class="text-(--therapy-tips-text)">Â·</span>
      
      <span class="flex items-center gap-1">
        <img src="https://unpkg.com/lucide-static@latest/icons/clock.svg"
             class="size-2.5 sm:size-2 lg:size-3 mb-0.5 text-(--therapy-tips-text)" />
        <p class="text-xs sm:text-2xs lg:text-xs text-(--therapy-tips-text)">
          <%= readDurationInMinsFromWords(article.content) %> MIN
        </p>
      </span>
    </div>
    
    <h2 class="font-bold text-(--therapy-tips) line-clamp-2 group-hover:underline leading-5">
      <%= article.title %>
    </h2>
    
    <p class="text-sm text-(--therapy-tips-text) line-clamp-3 leading-4">
      <%= article.subtitle %>
    </p>
  </div>
</a>