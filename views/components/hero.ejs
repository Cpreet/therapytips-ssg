<div class="flex flex-col items-center justify-center h-fit md:rounded-lg rounded-none gap-4 mb-2 md:mb-0 group
bg-(--therapy-tips-light) hover:bg-(--therapy-tips) transition-all duration-100">
    <a class="relative w-full h-full" href="https://www.youtube.com/watch?v=<%= ytData?.items[0].id %>"
        target="_blank" rel="noopener noreferrer">
        <img src="<%= ytData?.items[0].snippet.thumbnails.maxres.url %>" alt="<%= ytData?.items[0].snippet.title %>"
            class="object-cover h-full w-full md:rounded-t-lg rounded-none bg-fuchsia-500/43" loading="eager" />
        <div class="w-20 h-20 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
            <div class="
            w-20 h-20 bg-gray-500/50 group-hover:bg-red-600 rounded-full
            transition-all duration-100
          ">
                <span class="
              w-[101%] h-[98%] flex items-center justify-center m-[3px]
              before:content-[''] before:z-10 before:w-0 before:h-0 
              before:border-l-25 before:border-l-white 
              before:border-t-15 before:border-t-transparent
              before:border-b-15 before:border-b-transparent
              before:transition-all before:duration-100
            " />
            </div>
        </div>
        <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 translate-y-4/5 w-[87%]
          flex md:hidden gap-1 bg-white px-4 py-2 rounded-lg items-center justify-center
          border border-fuchsia-950/35 no-ads">
            <h1 class="text-sm md:text-lg text-(--therapy-tips-text) lg:text-center line-clamp-2 text-center">
                <%= ytData?.items[0].snippet.title %>
            </h1>
        </div>
    </a>
    <h1 class="hidden md:block text-sm pb-4 px-4 lg:text-lg text-(--therapy-tips) 
          lg:text-center font-bold line-clamp-2 group-hover:underline
          group-hover:text-white transition-all duration-100 no-ads">
        <%= ytData?.items[0].snippet.title %>
    </h1>
</div>