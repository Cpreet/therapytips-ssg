<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic Meta Tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interviews - Therapytips.org</title>
    <meta name="description" content="Explore the latest interviews by the team of online therapists and health professionals at Awake Therapy">
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://therapytips.org/interviews">
    
    <!-- Favicon and Touch Icons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="<%= process.env.BASE_URL %><%= process.env.BASE_DIR %>style.css">
    <link rel="preload" href="<%= process.env.BASE_URL %><%= process.env.BASE_DIR %>style.css" as="style">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text&display=swap" rel="stylesheet">
    
    <!-- Google AdSense -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7186632191667750" crossorigin="anonymous"></script>
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:site_name" content="Interviews - Therapytips.org" />
    <meta property="og:url" content="https://therapytips.org/interviews" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content="Check out the latest interviews conducted by the team of online therapists and health professionals at Awake Therapy" />
    
    <!-- Google Analytics & Tag Manager Scripts -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-8W1FCM72H7"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-8W1FCM72H7');
    </script>
</head>
<body>
    <%- include('components/header', { page: page }) %>
    <div class="flex flex-col max-w-[940px] xl:max-w-[1200px] lg:mx-auto bg-white">
    <div class="block md:hidden mb-6">
        <%- include('components/hero') %>
    </div>
    <main>
        <div class="flex py-2 md:py-6 w-full">
            <div class="flex flex-col w-full md:px-4 px-8">
                <div class="hidden md:block">
                    <%- include('components/hero') %>
                </div>
       
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 w-full mt-4">
                    <% for (const [idx, item] of interviews.entries()) { %>
                        <%- include('components/article-card', { article: item }) %>
                        <% if (idx === 1) { %>
                            <div class="flex flex-col gap-8 md:hidden">
                                <%- include('components/cta-bmc') %>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
            <div class="hidden md:flex w-2/5 xl:w-1/3">
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 w-px bg-fuchsia-950/35"></div>
                </div>
                <div class="flex flex-col gap-8 md:px-4">
                    <%- include('components/aside-trending') %>
                    <span class="h-px bg-fuchsia-950/35"></span>
                    <%- include('components/aside-journal') %>
                    <span class="h-px bg-fuchsia-950/35"></span>
                    <%- include('components/aside-videos') %>
                    <span class="h-px bg-fuchsia-950/35"></span>
                    <%- include('components/cta-bmc') %>
                </div>
            </div>
        </div>
    </main>
    <%- include('components/footer') %>
</div>